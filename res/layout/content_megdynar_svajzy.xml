<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarInSvazyActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/tvInToolBarOnSA"
                android:textColor="@android:color/white"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/srollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv1InMegdynarSvazy"
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:textSize="@dimen/new_text_margin"/>

            <ImageView
                android:id="@+id/imageViewInMegdynarSvazy"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/tv2InMegdynarSvazy"
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:textSize="@dimen/new_text_margin"/>

            <ImageView
                android:id="@+id/SecondimageViewInMegdynarSvazy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:textSize="0dp"
                android:id="@+id/tv3InMegdynarSvazy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"/>

            <ImageView
                android:id="@+id/ThirdimageViewInMegdynarSvazy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="0dp"
                android:id="@+id/tv4InMegdynarSvazy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>